<%= link_to 'Current Reservations', root_path %>

<h1>Book a Reservation Right Now!</h1>

<%= form_for [@restaurant, @reservation] do |f| %>  <!--these instances are our arguments for the form -->

  <% if @reservation.errors.any?%>

  <h2>Warning: <%= pluralize(@reservation.errors.count, "error") %> stopped this reservation from being saved: </h2>

  <ul>
    <% @reservation.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>

  <% end %>

  <p>
    <%= f.label :time %>
    <%= f.number_field :time %>
  </p>

  <p>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </p>

  <p>
    <%= f.label :guests %>
    <%= f.number_field :guests %>
  </p>

  <p><%= f.submit %></p>

<% end %>
