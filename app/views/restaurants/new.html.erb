<h1>Add a new restaurant</h1>

<%= form_for @restaurant do |f| %>

<p><%= f.label :name %>
<%= f.text_field :name %></p>

<p><%= f.label :address %>
<%= f.text_field :address %></p>

<p><%= f.label :neighborhood %>
<%= f.text_field :neighborhood %></p>

<p><%= f.label :price_range %>
<%= f.text_field :price_range %></p>

<p><%= f.label :menu %>
<%= f.text_area :menu %></p>

<p><%= f.label :time_slot %>
<%= f.text_field :time_slot %></p>

<p><%= f.submit %></p>




<% end %>
